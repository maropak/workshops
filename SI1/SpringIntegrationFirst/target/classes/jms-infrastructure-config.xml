<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- these beans provide a messaging infrastructure for the news network -->

	<bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL" value="vm://embedded?broker.persistent=false"/>
	</bean>

	<bean id="newsQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="news.queue"/>
	</bean>

	<bean id="confirmationQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="news.queue.confirmation"/>
	</bean>	

</beans>